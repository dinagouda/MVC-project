
@{
    Layout = null;
}

@model List<online_shopping.Models.user>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>showuser</title>
</head>
<body>
    <div>

        <table class="table  tab-content">
            <tr>
                <th>id</th>
                <th>name</th>
                <th>password</th>
                <th>email</th>
                <th>age</th>

            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.password</td>
                <td>@item.email</td>
                <td>@item.age</td>


                <td>@Html.ActionLink("Delete", "delete", "admin", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm ('are you sure to delete')" })</td>

            </tr>
            }
        </table>
        <td>@Html.ActionLink("add product", "admin", "addproduct", new { @class = "btn btn-success" })</td>
        <td>@Html.ActionLink("add category", "admin", "addcategory", new { @class = "btn btn-success" })</td>

    </div>
</body>
</html>
